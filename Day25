public class main {
public static void main(String[] args) {
        //operator incratmen
      int x = 2;
       int y= x++; 
        int x1 = 4;
        int y2 = ++x1;
        System.out.println("operator incratmen : ");
       // System.out.println(x);
        System.out.println("nilai awal = 2 > "+y);
        System.out.println("");
       // System.out.println(x1);
        System.out.println("nilai awal = 4 > "+y2);
        //operator dekretmen
        System.out.println("operator dekretmen : ");
        int a = 8;
        int b = a--;
        System.out.println("nilai awal = 8 > "+b);
        int c = 8;
        int d = --c;
        System.out.println("nilai awal = 8 > "+d);
    }
    
}
